<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail"
    tools:context=".CommunityDetail">

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_header_detail"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/descCom"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_discuss"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightening Only"
        android:layout_marginTop="15dp"
        android:textSize="28sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/descCom"
        app:layout_constraintStart_toStartOf="@+id/descCom"
        app:layout_constraintEnd_toEndOf="@+id/descCom"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Share with us your skin experiences and care more about your skin and yourself"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/judul"
        app:layout_constraintStart_toStartOf="@+id/descCom"
        app:layout_constraintEnd_toEndOf="@+id/descCom"/>

    <LinearLayout
        android:id="@+id/communityCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintStart_toStartOf="@+id/descCom"
        app:layout_constraintEnd_toEndOf="@+id/descCom">

        <ImageView
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/member"/>

        <TextView
            android:id="@+id/memberCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51k"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/discussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"/>

        <TextView
            android:id="@+id/DiscussCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120k"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member"
        android:background="@drawable/bg_btn_reply"
        android:backgroundTint="@color/UnguGenie"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/communityCount"
        app:layout_constraintStart_toStartOf="@+id/descCom"
        app:layout_constraintEnd_toEndOf="@+id/descCom"/>

    <View
        android:id="@+id/bodyTimeline"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_timeline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMember" />

    <ImageView
        android:id="@+id/profileDiscuss"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toTopOf="@+id/bodyTimeline"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="athenachingu"
        android:layout_marginTop="28dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/bodyTimeline"
        app:layout_constraintStart_toEndOf="@+id/profileDiscuss"/>

    <TextView
        android:id="@+id/sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 hour ago"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintStart_toEndOf="@+id/profileDiscuss"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop Review Avoskin"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/sent"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buat kalian yang pake avoskin, drop review kalian di comment dong. \nPenasaran banget mau cobaaa"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline"/>

    <ImageView
        android:id="@+id/pictureContent"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:src="@drawable/avoskin"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline"/>

    <LinearLayout
        android:id="@+id/likeAndComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pictureContent"
        app:layout_constraintStart_toStartOf="@+id/content">

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"/>

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"/>

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flag"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/profileDiscuss2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/user"
        app:layout_constraintTop_toBottomOf="@+id/likeAndComment"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"/>

    <TextView
        android:id="@+id/user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="athenachingu"
        android:layout_marginTop="28dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/likeAndComment"
        app:layout_constraintStart_toEndOf="@+id/profileDiscuss2"/>

    <TextView
        android:id="@+id/sent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 hour ago"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/user2"
        app:layout_constraintStart_toEndOf="@+id/profileDiscuss2"/>

    <ImageView
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/likeAndComment"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop Review Beauty of Joseon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/sent2"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"/>

    <TextView
        android:id="@+id/content2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="OMG OMG BOJ IS MY LIFE SAVIOUR. KALIAN SEMUA HARUS COBA POKOKNYAAA"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline"/>

    <ImageView
        android:id="@+id/pictureContent2"
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:src="@drawable/avoskin"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/content2"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline"/>

    <include
        layout="@layout/navbar1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-123dp" />


</androidx.constraintlayout.widget.ConstraintLayout>