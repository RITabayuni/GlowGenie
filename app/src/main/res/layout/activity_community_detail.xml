<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail"
    tools:context=".community.CommunityDetail">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_header_detail"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/descCom"
        android:layout_width="320dp"
        android:layout_height="190dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_discuss"
        app:layout_constraintTop_toTopOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/comName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/descCom"
        app:layout_constraintStart_toStartOf="@+id/descCom"
        app:layout_constraintEnd_toEndOf="@+id/descCom">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Share with us your skin experiences and care more about your skin and yourself"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/communityCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            app:layout_constraintStart_toStartOf="@+id/descCom"
            app:layout_constraintEnd_toEndOf="@+id/descCom">

            <ImageView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/member"/>

            <TextView
                android:id="@+id/memberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51k"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/discussion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment"/>

            <TextView
                android:id="@+id/DiscussCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120k"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnMember"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Member"
            android:padding="0dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/bg_btn_reply"
            android:backgroundTint="@color/UnguGenie"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>

    <View
        android:id="@+id/bodyTimeline"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_timeline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comName" />

    <LinearLayout
        android:id="@+id/forum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/bodyTimeline"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileDiscuss"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/profile_com" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/profileDiscuss"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/poppins_regular"
                android:text="athenachingu"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour ago"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"
                android:layout_marginStart="40dp"
                android:layout_alignStart="@+id/profileDiscuss"
                android:layout_below="@+id/user"/>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop Review Avoskin"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/content"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Buat kalian yang pake avoskin, drop review kalian di comment dong. Penasaran banget mau cobaaa"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp" />

        <ImageView
            android:id="@+id/pictureContent"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:src="@drawable/avoskin"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/likeAndComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/pictureContent"
            app:layout_constraintStart_toStartOf="@+id/content">

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"/>

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="122"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"/>

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flag"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/forum1"
        app:layout_constraintStart_toStartOf="@+id/bodyTimeline"
        app:layout_constraintEnd_toEndOf="@+id/bodyTimeline">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileDiscuss2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/profile_com" />

            <TextView
                android:id="@+id/user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/profileDiscuss2"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/poppins_regular"
                android:text="athenachingu"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour ago"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp"
                android:layout_marginStart="40dp"
                android:layout_alignStart="@+id/profileDiscuss2"
                android:layout_below="@+id/user2"/>

            <ImageView
                android:id="@+id/menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop Review Beauty of Joseon"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/content2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Beauty of Joseon really saved my life!!!, Lu semua harus coba essencenyaaaa"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp" />

        <ImageView
            android:id="@+id/pictureContent2"
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:src="@drawable/avoskin"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/likeAndComment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/pictureContent"
            app:layout_constraintStart_toStartOf="@+id/content">

            <ImageView
                android:id="@+id/like2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"/>

            <TextView
                android:id="@+id/likeCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="122"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"/>

            <TextView
                android:id="@+id/commentCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/flag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flag"/>
        </LinearLayout>

    </LinearLayout>



    <include
        layout="@layout/navbar1" />


</androidx.constraintlayout.widget.ConstraintLayout>