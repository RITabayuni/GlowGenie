<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityList">


    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="Halo, Anita!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:text="How's your skin condition today?"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/halo" />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:queryHint="ask here"
        android:layout_marginBottom="20dp"
        android:layoutDirection="rtl"
        android:iconifiedByDefault="false"
        android:searchIcon="@drawable/ic_search"
        android:background="@drawable/bg_search"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintEnd_toEndOf="@+id/header" />

    <TextView
        android:id="@+id/community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivCommunity1"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:src="@drawable/display_com1"
        android:layout_marginStart="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/community"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivCommunity2"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:src="@drawable/display_com2"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/community"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/descCommunity"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="TextView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_img_community"
        app:layout_constraintBottom_toBottomOf="@+id/ivCommunity1"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity1"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity1" />

    <Button
        android:id="@+id/join"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Join"
        android:padding="0dp"
        android:background="@drawable/bg_join"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/descCommunity"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity1"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity1"/>

    <TextView
        android:id="@+id/judulContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightening Only"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/join"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity1"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity1"/>

    <TextView
        android:id="@+id/subContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with us your skin \nexperiences"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judulContent"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity1"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity1"/>

    <View
        android:id="@+id/descCommunity2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="TextView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_img_community"
        app:layout_constraintBottom_toBottomOf="@+id/ivCommunity2"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity2"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity2" />

    <Button
        android:id="@+id/join2"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Join"
        android:padding="0dp"
        android:background="@drawable/bg_join"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/descCommunity2"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity2"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity2"/>

    <TextView
        android:id="@+id/judulContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oily Skin"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/join2"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity2"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity2"/>

    <TextView
        android:id="@+id/subContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with us your skin \nexperiences"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judulContent2"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity2"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity2"/>

    <ImageView
        android:id="@+id/ivCommunity3"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:src="@drawable/display_com3"
        android:layout_marginStart="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCommunity1"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivCommunity4"
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:src="@drawable/display_com4"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCommunity2"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/descCommunity3"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="TextView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_img_community"
        app:layout_constraintBottom_toBottomOf="@+id/ivCommunity3"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity3"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity3" />

    <Button
        android:id="@+id/join3"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Join"
        android:padding="0dp"
        android:background="@drawable/bg_join"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/descCommunity3"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity3"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity3"/>

    <TextView
        android:id="@+id/judulContent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acne Prone Skin"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/join3"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity3"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity3"/>

    <TextView
        android:id="@+id/subContent3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with us your skin \nexperiences"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judulContent3"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity3"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity3"/>

    <View
        android:id="@+id/descCommunity4"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="TextView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_img_community"
        app:layout_constraintBottom_toBottomOf="@+id/ivCommunity4"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity4"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity4" />

    <Button
        android:id="@+id/join4"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Join"
        android:padding="0dp"
        android:background="@drawable/bg_join"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/descCommunity4"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity4"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity4"/>

    <TextView
        android:id="@+id/judulContent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensitive Skin"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/join4"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity4"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity4"/>

    <TextView
        android:id="@+id/subContent4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share with us your skin \nexperiences"
        android:textSize="10sp"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judulContent4"
        app:layout_constraintStart_toStartOf="@+id/ivCommunity4"
        app:layout_constraintEnd_toEndOf="@+id/ivCommunity4"/>


    <include
        layout="@layout/navbar1" />
</androidx.constraintlayout.widget.ConstraintLayout>